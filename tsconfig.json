{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "dist",
        "declaration": true,
        "skipLibCheck": true,
        "jsx": "preserve"
    },
    "include": ["data/*.ts", "src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
