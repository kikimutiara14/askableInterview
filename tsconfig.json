{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "data/*.ts",
    "src/**/*.ts",
  ],
  "exclude": ["node_modules", "dist"]
}